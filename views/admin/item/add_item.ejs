<div class="tab-pane fade" id="add-item" role="tabpanel" aria-labelledby="profile-tab">
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <form action="/admin/item" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="title">Nama Item</label>
          <input type="text" class="form-control" name="title" id="title" required>
        </div>
        <div class="form-group">
          <label for="price">Harga</label>
          <input type="number" class="form-control" name="price" id="price" required>
        </div>
        <div class="form-group">
          <label for="city">Kota</label>
          <input type="text" class="form-control" name="city" id="city" required>
        </div>
        <div class="form-group">
          <label for="category">Kategori</label>
          <select class="form-control" name="category_id" id="category">
            <option value="">--- Pilih Kategori ---</option>
            <% for(let i = 0; i < category.length; i++) { %>
            <option value="<%= category[i]._id %>"><%= category[i].name %></option>
            <% } %>
          </select>
        </div>
        <div class="form-group">
          <label for="image">Gambar</label>
          <input type="file" class="form-control-file" name="image" id="image" multiple required>
        </div>
        <div class="form-group">
          <label for="description">Deskripsi</label>
          <textarea class="form-control" name="description" id="description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Simpan</button>
      </form>
    </div>
  </div>
</div>