  <!-- JavaScript File -->
  <%- include('../../partials/js.ejs') %>
  <!-- End of JavaScript File -->

  <script>
    $('#dataTable').on('click', '.button-update', function() {
      var id = $(this).data('id');
      var bank_name = $(this).data('bankname');
      var account_number = $(this).data('accountnumber');
      var account_name = $(this).data('accountname');
      var image_url = $(this).data('imageurl');

      $('.id').val(id);
      $('#edit_bank_name').val(bank_name);
      $('#edit_account_number').val(account_number);
      $('#edit_account_name').val(account_name);
      $('#edit_image').attr("src", "https://backend-inncation.herokuapp.com/"+image_url);
      $('#edit_image').attr("alt", bank_name);
    });
  </script>

