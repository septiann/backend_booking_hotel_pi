<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-category">
        <i class="fas fa-plus"></i> Tambah Kategori
      </button>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No.</th>
              <th>Nama Kategori</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < category.length; i++) { %>
              <tr>
                <td class="align-middle"><%= i + 1 %></td>
                <td class="align-middle"><%= category[i].name %></td>
                <td class="align-middle">
                  <form action="/admin/category/<%= category[i]._id %>?_method=DELETE" method="post">
                    <button type="button" class="btn btn-warning btn-sm button-update" style="width: 80px;" data-toggle="modal" data-target="#edit-category" data-id="<%= category[i]._id %>" data-name="<%= category[i].name %>"><i class="fas fa-edit"></i> Ubah</button>
                    <button type="submit" class="btn btn-danger btn-sm" style="width: 80px;"><i class="fas fa-trash"></i> Hapus</button>
                  </form>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>